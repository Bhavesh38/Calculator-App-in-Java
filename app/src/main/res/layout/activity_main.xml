<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/solution_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="64dp"
        android:textColor="@color/black"
        android:layout_margin="16dp"
        android:layout_above="@id/result_text"
        android:textAlignment="textEnd"/>
    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="64dp"
        android:textColor="@color/black"
        android:text="0"
        android:layout_above="@id/buttons_layout"
        android:textAlignment="textEnd"
        android:layout_margin="16dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/buttons_layout"
    android:orientation="vertical"
    android:background="#CCC4C4"
    android:paddingVertical="16dp"
    android:layout_alignParentBottom="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout_1"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="C"
            android:textColor="#FFFFFF"
            android:textSize="32dp"
            android:backgroundTint="#E30909"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_margin="12dp"
            android:id="@+id/button_c"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="("
            android:textColor="#FFFFFF"
            android:backgroundTint="#838080"
            android:textSize="32dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_margin="12dp"
            android:id="@+id/button_openBracket"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text=")"
            android:backgroundTint="#838080"
            android:textColor="@color/white"
            android:textSize="32dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_margin="12dp"
            android:id="@+id/button_closeBracket"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="32dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_margin="12dp"
            android:id="@+id/button_divide"
            android:backgroundTint="#F1DE34"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout_2"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="32dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_margin="12dp"
            android:id="@+id/button_seven"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="32dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_margin="12dp"
            android:id="@+id/button_eight"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="32dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_margin="12dp"
            android:id="@+id/button_nine"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="*"
            android:textColor="@color/white"
            android:textSize="32dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_margin="12dp"
            android:id="@+id/button_multiply"
            android:backgroundTint="#F1DE34"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout_3"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="32dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_margin="12dp"
            android:id="@+id/button_four"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="32dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_margin="12dp"
            android:id="@+id/button_five"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="32dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_margin="12dp"
            android:id="@+id/button_six"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="32dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_margin="12dp"
            android:id="@+id/button_minus"
            android:backgroundTint="#F1DE34"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout_4"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="32dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_margin="12dp"
            android:id="@+id/button_one"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="32dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_margin="12dp"
            android:id="@+id/button_two"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="32dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_margin="12dp"
            android:id="@+id/button_three"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="32dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_margin="12dp"
            android:id="@+id/button_plus"
            android:backgroundTint="#F1DE34"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout_5"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="AC"
            android:textColor="@color/white"
            android:textSize="20dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_margin="12dp"
            android:backgroundTint="#E30909"
            android:id="@+id/button_ac"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="32dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_margin="12dp"
            android:id="@+id/button_zero"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="."
            android:textColor="@color/white"
            android:textSize="32dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_margin="12dp"
            android:id="@+id/button_dot"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:cornerRadius="36dp"
            android:text="="
            android:textColor="@color/white"
            android:textSize="32dp"
            style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
            android:layout_margin="12dp"
            android:backgroundTint="#F1DE34"
            android:id="@+id/button_equal"/>

    </LinearLayout>
</LinearLayout>


</RelativeLayout>